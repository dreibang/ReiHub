local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local UIS = game:GetService("UserInputService")
local HttpService = game:GetService("HttpService")

local LocalPlayer = Players.LocalPlayer

-- UI Setup
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
ScreenGui.Name = "AFS_Advanced_GUI"

local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0, 500, 0, 400)
Frame.Position = UDim2.new(0.3, 0, 0.3, 0)
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.BorderSizePixel = 0
Frame.Active = true
Frame.Draggable = true

local title = Instance.new("TextLabel", Frame)
title.Text = "ReiHub | Anime Final Strike"
title.Size = UDim2.new(1, 0, 0, 40)
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
title.Font = Enum.Font.SourceSansBold
title.TextSize = 22

title.Position = UDim2.new(0, 0, 0, 0)

local function createButton(text, y, callback)
    local btn = Instance.new("TextButton", Frame)
    btn.Text = text
    btn.Size = UDim2.new(0.9, 0, 0, 30)
    btn.Position = UDim2.new(0.05, 0, 0, y)
    btn.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Font = Enum.Font.SourceSans
    btn.TextSize = 18
    btn.MouseButton1Click:Connect(callback)
    return btn
end

-- Code Redemption
local redeemRemote = ReplicatedStorage:FindFirstChild("Remotes") and ReplicatedStorage.Remotes:FindFirstChild("RedeemCode")
local codes = {
    "THANKSFOR30KLIKES", "THANKSFOR20KLIKES", "ILUVAFS",
    "APOLOGIESFORBUGS", "THANKSFOR10KLIKES", "THANKSFOR5KLIKES",
    "SORRY4SHUTDOWN", "15KCCU", "TRAILER", "THANKSFOR20K", "RELEASE"
}

createButton("Redeem All Codes", 50, function()
    if redeemRemote then
        for _, code in ipairs(codes) do
            pcall(function()
                redeemRemote:InvokeServer(code)
                wait(0.2)
            end)
        end
    end
end)

-- Auto Farm (basic placeholder)
createButton("Start Auto Farm (WIP)", 90, function()
    print("Auto Farm logic would go here...")
end)

-- Macro System
local macroData = {}
local macroFolder = "AFS_Macros"
if not isfolder(macroFolder) then makefolder(macroFolder) end

local isRecording = false
local lastInputTime = tick()

UIS.InputBegan:Connect(function(input, processed)
    if not processed and isRecording then
        local now = tick()
        table.insert(macroData, {
            KeyCode = input.KeyCode.Name,
            InputType = input.UserInputType.Name,
            Delay = now - lastInputTime
        })
        lastInputTime = now
    end
end)

createButton("Start Recording", 130, function()
    macroData = {}
    isRecording = true
    lastInputTime = tick()
    print("[Macro] Recording started.")
end)

createButton("Stop Recording", 170, function()
    isRecording = false
    print("[Macro] Recording stopped.")
end)

createButton("Play Last Macro", 210, function()
    print("[Macro] Playing macro...")
    spawn(function()
        for _, action in ipairs(macroData) do
            wait(action.Delay)
            print("[Replay]", action.KeyCode, action.InputType)
        end
    end)
end)

createButton("Save Macro as 'macro1'", 250, function()
    writefile(macroFolder.."/macro1.json", HttpService:JSONEncode(macroData))
    print("[Macro] Saved as macro1")
end)

-- Dropdown for saved macros
local dropdown = Instance.new("TextButton", Frame)
dropdown.Text = "Load Macro â–¼"
dropdown.Size = UDim2.new(0.9, 0, 0, 30)
dropdown.Position = UDim2.new(0.05, 0, 0, 290)
dropdown.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
dropdown.TextColor3 = Color3.fromRGB(255, 255, 255)
dropdown.Font = Enum.Font.SourceSansBold
dropdown.TextSize = 18

local listFrame = Instance.new("Frame", dropdown)
listFrame.Size = UDim2.new(1, 0, 0, 100)
listFrame.Position = UDim2.new(0, 0, 1, 0)
listFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
listFrame.Visible = false

local function refreshMacroList()
    for _, child in ipairs(listFrame:GetChildren()) do
        if child:IsA("TextButton") then child:Destroy() end
    end
    local files = listfiles(macroFolder)
    local y = 0
    for _, file in ipairs(files) do
        local filename = file:match("[^/]+.json$")
        if filename then
            local btn = Instance.new("TextButton", listFrame)
            btn.Text = filename:gsub(".json", "")
            btn.Size = UDim2.new(1, 0, 0, 20)
            btn.Position = UDim2.new(0, 0, 0, y)
            btn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
            btn.TextColor3 = Color3.fromRGB(255, 255, 255)
            btn.MouseButton1Click:Connect(function()
                local content = readfile(macroFolder.."/"..filename)
                macroData = HttpService:JSONDecode(content)
                print("[Macro] Loaded", filename)
                listFrame.Visible = false
            end)
            y = y + 20
        end
    end
end

dropdown.MouseButton1Click:Connect(function()
    listFrame.Visible = not listFrame.Visible
    refreshMacroList()
end)
